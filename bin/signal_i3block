#!/usr/bin/env zsh
##----------------------------------------------------------------------------------------
##--   file > ${XDG_CONFIG_HOME}/dotfiles/bin/signal_block                              --
##-- author > ygoreus aka Joe Biden                                                     --
##-- vim: set rnu nu ai et ts=4 sw=4 ft=zsh syn=zsh :                                   --
##----------------------------------------------------------------------------------------
##--

##-- send signals to update i3 blocks ----------------------------------------------------
##-- volume block
pkill -SIGRTMIN+10 i3blocks
##-- brightness block
pkill -SIGRTMIN+11 i3blocks
##--
pkill -SIGRTMIN+22 i3blocks
##--
pkill -SIGRTMIN+23 i3blocks
##--

